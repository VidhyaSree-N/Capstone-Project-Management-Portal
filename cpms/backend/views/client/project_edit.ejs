<h1>Edit Project</h1>

<form method="POST" action="/api/projects/<%= project._id %>" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="PUT">

  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= project.title %>" required>
  </div>

  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= project.description %></textarea>
  </div>

  <div>
    <label for="admin">Administrators:</label>
    <textarea id="admin" name="admin" required><%= project.admin %></textarea>
  </div>

  <div>
    <label for="skills">Skills & Technologies Required:</label>
    <textarea id="skills" name="skills" required><%= project.skills %></textarea>
  </div>

  <div>
    <label for="deadline">Anticipated Deadline:</label>
    <input type="date" id="deadline" name="deadline" value="<%= project.deadline %>" required>
  </div>

  <div>
    <label for="resources">Resources Provided:</label>
    <textarea id="resources" name="resources" required><%= project.resources %></textarea>
  </div>

  <div>
    <% if (project.file) { %>
      <a href="/api/projects/<%= project._id %>/file">Download Attachment</a>
      <br>
    <% } %>
    <label for="file">Attach File (PDF, max 25MB):</label>
    <input type="file" id="file" name="file" accept=".pdf">
  </div>

  <div>
    <button type="submit">Save Changes</button>
  </div>
</form>